# Authentication Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
# Use the same Neon database as the RAG chatbot
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require

# Session Security
# IMPORTANT: Generate a strong random secret for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=change-this-to-a-secure-random-secret-in-production

# Session Configuration
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE_DAYS=30
SESSION_IDLE_TIMEOUT_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# Google OAuth Configuration (Optional)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback

# Security Settings
# Set to True in production (requires HTTPS)
SECURE_COOKIES=False
SAME_SITE_COOKIES=lax

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
