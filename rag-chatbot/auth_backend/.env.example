# Authentication Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
# Use the same Neon database as the RAG chatbot
DATABASE_URL=postgresql://your-username:your-password@your-database-host:your-port/your-database-name

# Session Security
# IMPORTANT: Generate a strong random secret for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=your-session-secret

# Session Configuration
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE_DAYS=30
SESSION_IDLE_TIMEOUT_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,https://daniyalaneeq.github.io/Physical-AI-Robotic-Book/

# Google OAuth Configuration (Optional)
# Get these from: https://console.cloud.google.com/apis/credentials
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/oauth/google/callback

# Frontend URL (for OAuth redirects after successful authentication)
# Development: localhost:3000
# Production: https://daniyalaneeq.github.io/Physical-AI-Robotic-Book
FRONTEND_URL=http://localhost:3000/Physical-AI-Robotic-Book
# Security Settings
# Set to True in production (requires HTTPS)
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
