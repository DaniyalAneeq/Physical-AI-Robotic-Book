# Production Environment Configuration
# This file contains settings for production deployment (HTTPS)

# Database Configuration
DATABASE_URL=postgresql://user:password@production-host:5432/aidd_prod

# Authentication Configuration
SESSION_SECRET=REPLACE-WITH-SECURE-RANDOM-SECRET-FROM-ENVIRONMENT
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE_DAYS=30
SESSION_IDLE_TIMEOUT_DAYS=7

# Cookie Configuration (Production - HTTPS)
# CRITICAL: Use SameSite=None with Secure=True for production (cross-origin HTTPS)
# SameSite=None REQUIRES Secure=True (HTTPS only)
SECURE_COOKIES=true
SAME_SITE_COOKIES=none

# CORS Configuration
# Production origins (GitHub Pages and your backend domain)
CORS_ORIGINS=https://daniyalaneeq.github.io,https://e-book-physical-ai-humanoid-robotics.onrender.com/

# OAuth Configuration (Google)
OAUTH_GOOGLE_CLIENT_ID=your-production-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-production-google-client-secret
OAUTH_GOOGLE_REDIRECT_URI=https://your-backend-domain.com/auth/oauth/google/callback

# OAuth Configuration (GitHub)
OAUTH_GITHUB_CLIENT_ID=your-production-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-production-github-client-secret
OAUTH_GITHUB_REDIRECT_URI=https://your-backend-domain.com/auth/oauth/github/callback

# Frontend URL
# Production GitHub Pages URL
FRONTEND_URL=https://daniyalaneeq.github.io/Physical-AI-Robotic-Book
