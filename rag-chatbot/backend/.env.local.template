# Local Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and will override .env.development

# ========================================
# REQUIRED: Get these from your providers
# ========================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR-ACTUAL-KEY-HERE

# Qdrant Configuration
# Get these from: https://cloud.qdrant.io/
QDRANT_URL=https://YOUR-CLUSTER-ID.us-east4-0.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=YOUR-ACTUAL-QDRANT-API-KEY-HERE
QDRANT_COLLECTION_NAME=content-aidd-book

# Database Configuration
# Get your connection string from: https://neon.tech/
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require

# ========================================
# Authentication Configuration
# ========================================

# Generate a secure random secret (minimum 32 characters)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=YOUR-SECURE-RANDOM-SECRET-HERE-MIN-32-CHARS

# Session settings (defaults are fine for most cases)
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE_DAYS=30
SESSION_IDLE_TIMEOUT_DAYS=7

# ========================================
# OAuth Configuration (Optional)
# ========================================

# Google OAuth (optional)
# Set up at: https://console.cloud.google.com/apis/credentials
OAUTH_GOOGLE_CLIENT_ID=YOUR-GOOGLE-CLIENT-ID.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=YOUR-GOOGLE-CLIENT-SECRET
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/oauth/google/callback

# GitHub OAuth (optional)
# Set up at: https://github.com/settings/developers
OAUTH_GITHUB_CLIENT_ID=YOUR-GITHUB-CLIENT-ID
OAUTH_GITHUB_CLIENT_SECRET=YOUR-GITHUB-CLIENT-SECRET
OAUTH_GITHUB_REDIRECT_URI=http://localhost:8000/auth/oauth/github/callback

# ========================================
# Development Settings (don't change)
# ========================================

ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS Configuration (add your frontend URLs if different)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Cookie Configuration (Development - HTTP)
# IMPORTANT: Use SameSite=Lax for development (HTTP localhost)
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Content Paths
TEXTBOOK_DOCS_PATH=../../AIdd-book/docs

# Frontend URL
FRONTEND_URL=http://localhost:3000/Physical-AI-Robotic-Book
